<resources>
    <!-- Base application theme. -->
    <style name="Theme.MusicApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!--Primary brand color-->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">?android:colorBackground</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!--Secondary brand color-->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--Status bar color-->
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <style name="MiniPlayerStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ButtonBackgroundTheme">
        <item name="android:backgroundTint">?android:colorBackground</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.Material3.SearchView">
        <item name="android:searchIcon">@drawable/ic_search_while</item>
        <item name="android:searchHintIcon">@drawable/ic_search_while</item>
        <item name="android:closeIcon">@drawable/ic_close</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="SearchKeyStyle">
        <item name="android:background">?attr/colorSurface</item>
    </style>
</resources>